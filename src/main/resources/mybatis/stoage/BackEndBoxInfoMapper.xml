<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.storage.mapper.BackEndBoxInfoMapper">

    <resultMap id="BoxInfoResult" type="com.ruoyi.project.storage.domain.BoxInfo">
        <id     property="id" column="id"/>
        <result property="boxCode" column="box_code"/>
        <result property="boxStandard" column="box_standard"/>
        <result property="boxUnitPrice" column="box_unit_price"/>
        <result property="usedBy" column="used_by"/>
        <result property="usedByName" column="used_by_name"/>
        <result property="remark" column="remark"/>
        <result property="sortNo" column="sort_no"/>
        <result property="createTime" column="create_time"/>
        <result property="createBy" column="create_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="version" column="version"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>

    <sql id="BoxInfoVO">
        select id,box_code,box_standard,box_unit_price,used_by,remark,sort_no,create_time,create_by,update_time,update_by,version,del_flag from t_box_info
    </sql>

    <select id="queryBoxInfoList" parameterType="com.ruoyi.project.storage.domain.BoxInfo" resultMap="BoxInfoResult">
        <include refid="BoxInfoVO"/>
        where del_flag = '0'
        <if test="searchValue != null and searchValue != ''">
            and box_standard like concat(#{searchValue}, '%')
        </if>
        ORDER BY
            box_standard
    </select>

    <insert id="insertBoxInfo" parameterType="com.ruoyi.project.storage.domain.BoxInfo">
        insert into t_box_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="boxCode != null">box_code,</if>
            <if test="boxStandard != null and boxStandard != ''">box_standard,</if>
            <if test="boxUnitPrice != null">box_unit_price,</if>
            <if test="isUsed != null">is_used,</if>
            <if test="remark != null and remark != ''">remark,</if>
            <if test="sortNo != null">sort_no,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="version != null">version,</if>
            <if test="delFlag != null and delFlag != ''">del_flag,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="boxCode != null">#{boxCode},</if>
            <if test="boxStandard != null and boxStandard != ''">#{boxStandard},</if>
            <if test="boxUnitPrice != null">#{boxUnitPrice},</if>
            <if test="isUsed != null">#{isUsed},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
            <if test="sortNo != null">#{sortNo},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="version != null">#{version},</if>
            <if test="delFlag != null and delFlag != ''">#{delFlag},</if>
        </trim>
    </insert>

    <update id="deleteBoxInfo" parameterType="map">
        update t_box_info
        set del_flag = '2',
        update_time = #{time},
        update_by = #{user},
        version = version +1
        where
            is_used = 0
        and
            del_flag = '0'
        and id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
</mapper>